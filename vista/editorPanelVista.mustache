<style>
    .editor-wrap { max-width: 1000px; margin: 36px auto; padding: 24px; border:1px solid #e5e7eb; border-radius:16px; background:#fff; }
    .editor-title { font-size: 24px; font-weight: 800; margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center; }
    .editor-table { width:100%; border-collapse: collapse; margin-top: 15px; }
    .editor-table th, .editor-table td { padding:12px; border-bottom:1px solid #e5e7eb; text-align:left; }
    .editor-table th { background:#f8f9fa; }
    .btn { display:inline-block; padding:8px 12px; border:none; border-radius:8px; text-decoration:none; cursor:pointer; font-size: 14px; margin-right: 5px; }
    .btn-primary { background:#007bff; color:#fff; }
    .btn-warning { background:#ffc107; color:#333; }
    .btn-danger { background:#dc3545; color:#fff; }
    .btn-success { background:#28a745; color:#fff; }
    .msg-box { padding: 10px; border-radius: 8px; margin-bottom: 15px; }
    .msg-success { background: #d4edda; color: #155724; border: 1px solid #c3e6cb; }
    .msg-error { background: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; }
</style>

<div class="editor-wrap">
    <div class="editor-title">
        <span>✏️ Panel de Edición de Preguntas</span>
        <a class="btn btn-success" href="/editor/crearPregunta">+ Crear Nueva Pregunta</a>
    </div>

    {{#msg}}
        <div class="msg-box msg-success">{{msg}}</div>
    {{/msg}}
    {{#error}}
        <div class="msg-box msg-error">{{error}}</div>
    {{/error}}

    {{#preguntas}}
        <table class="editor-table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Pregunta</th>
                <th>Categoría</th>
                <th>Resp. Correcta</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            {{#preguntas}}
                <tr>
                    <td>{{id_pregunta}}</td>
                    <td>{{pregunta}}</td>
                    <td>{{categoria}}</td>
                    <td>{{es_correcta}}</td>
                    <td>
                        <a class="btn btn-warning" href="/editor/editarPregunta?id={{id_pregunta}}">Editar</a>
                        <a class="btn btn-danger" href="/editor/eliminarPregunta?id={{id_pregunta}}"
                        onclick="return confirm('¿Estás seguro de eliminar esta pregunta? Esto afectará los historiales de juego.');">
                        Eliminar
                        </a>
                    </td>
                </tr>
            {{/preguntas}}
            </tbody>
        </table>
    {{/preguntas}}

    {{^preguntas}}
        <div class="rk-empty">No hay preguntas cargadas en el sistema.</div>
    {{/preguntas}}
</div>