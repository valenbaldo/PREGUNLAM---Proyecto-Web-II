<style>
    :root{
        --brand:#0b8f72;
        --ink:#0b0b0b;
        --muted:#6b7280;
        --ring:#e5e7eb;
        --bg:#f3f4f6;
    }
    body{ background:var(--bg); }

    .auth-wrap{
        min-height: calc(100vh - 120px);
        display:grid; place-items:center;
        padding: 24px 16px;
    }
    .auth-card{
        width: min(420px, 92vw);
        background:#fff; border:1px solid var(--ring);
        border-radius:18px; padding:22px 20px;
        box-shadow: 0 10px 18px rgba(0,0,0,.06);
    }
    .auth-head{ text-align:center; margin-bottom:14px; }
    .auth-logo{ width:200px; margin:0 auto 6px; display:block; }
    .auth-title{ font-weight:900; font-size:22px; }
    .auth-sub{ color:var(--muted); font-size:14px; }

    .field{ margin:12px 0; }
    .label{ font-size:13px; color:#111; margin-bottom:6px; display:block; }
    .input{
        width:100%; padding:12px 14px; border:1px solid var(--ring);
        border-radius:12px; outline:none; background:#fff;
        transition: box-shadow .15s, border-color .15s;
    }
    .input:focus{ border-color: var(--brand); box-shadow: 0 0 0 3px #0b8f7230; }

    .auth-actions{ margin-top:14px; display:flex; gap:8px; }
    .btn{
        flex:1; padding:12px 14px; border:none; border-radius:12px; cursor:pointer;
        font-weight:700; transition: background .15s, color .15s, box-shadow .15s, border-color .15s;
    }
    .btn-brand{ background:var(--brand); color:#fff; }
    .btn-brand:hover,
    .btn-brand:focus{ box-shadow: 0 0 0 3px #0b8f7230; }


    .btn-outline{
        background:#fff; color:var(--brand);
        border:1px solid var(--brand);
    }
    .btn-outline:hover,
    .btn-outline:focus{
        background:var(--brand); color:#fff;
        box-shadow: 0 0 0 3px #0b8f7230;
    }
    .btn-flex{ display:inline-flex; align-items:center; justify-content:center; gap:8px; }
    .btn svg{ width:18px; height:18px; }

    .helper{ margin-top:8px; font-size:13px; text-align:center; color:var(--muted); }
    .link{ color:var(--brand); text-decoration:none; font-weight:700; }
    .link:hover{ text-decoration:underline; }

    .error{
        background:#fde8e8; border:1px solid #f8b4b4; color:#9b1c1c;
        padding:10px 12px; border-radius:12px; margin:8px 0 2px;
    }
</style>

