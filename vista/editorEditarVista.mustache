<style>
    .editor-wrap { max-width: 1000px; margin: 36px auto; padding: 24px; border:1px solid #e5e7eb; border-radius:16px; background:#fff; }
    .editor-title { font-size: 24px; font-weight: 800; margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center; }
    .editor-table th, .editor-table td { padding:12px; border-bottom:1px solid #e5e7eb; text-align:left; }
    .editor-table th { background:#f8f9fa; }
    .btn { display:inline-block; padding:8px 12px; border:none; border-radius:8px; text-decoration:none; cursor:pointer; font-size: 14px; margin-right: 5px; }
    .btn-primary { background:#007bff; color:#fff; }
    .btn-warning { background:#ffc107; color:#333; }
    .msg-box { padding: 10px; border-radius: 8px; margin-bottom: 15px; }
    .msg-error { background: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; }
    .form-group { margin-bottom: 15px; }
    .form-group label { display: block; font-weight: bold; margin-bottom: 5px; }
    .form-group input[type="text"], .form-group textarea, .form-group select { width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box; }
</style>

<div class="editor-wrap">
    <div class="editor-title">
        <span>✍️ Editar Pregunta #{{id_pregunta}}</span>
        <a class="btn btn-primary" href="/editor/base">⬅ Volver al Panel</a>
    </div>

    {{#error}}
        <div class="msg-box msg-error">Error: {{error}}</div>
    {{/error}}

    <form action="/editor/actualizarPregunta" method="POST">
        <input type="hidden" name="id_pregunta" value="{{id_pregunta}}">

        <div class="form-group">
            <label for="pregunta">Texto de la Pregunta:</label>
            <textarea id="pregunta" name="pregunta" rows="3" required>{{pregunta}}</textarea>
        </div>

        <div class="form-group">
            <label for="id_categoria">Categoría:</label>
            <select id="id_categoria" name="id_categoria" required>
                {{#categorias}}
                    <option value="{{id_categoria}}" {{#id_categoria_actual}}selected{{/id_categoria_actual}}>{{nombre}}</option>
                {{/categorias}}
            </select>
        </div>

        <h3>Opciones de Respuesta:</h3>

        <div class="form-group">
            <label for="a">Opción A:</label>
            <input type="text" id="a" name="a" value="{{a}}" required>
        </div>
        <div class="form-group">
            <label for="b">Opción B:</label>
            <input type="text" id="b" name="b" value="{{b}}" required>
        </div>
        <div class="form-group">
            <label for="c">Opción C:</label>
            <input type="text" id="c" name="c" value="{{c}}" required>
        </div>
        <div class="form-group">
            <label for="d">Opción D:</label>
            <input type="text" id="d" name="d" value="{{d}}" required>
        </div>

        <hr>

        <div class="form-group">
            <label for="respuesta_correcta">Respuesta Correcta (Letra A, B, C o D):</label>
            <input type="text" id="respuesta_correcta" name="respuesta_correcta" maxlength="1" value="{{es_correcta}}" required>
        </div>

        <button type="submit" class="btn btn-warning">Actualizar Pregunta</button>
    </form>
</div>